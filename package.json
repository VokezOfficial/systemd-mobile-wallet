{
  "name": "SystemD Wallet",
  "version": "2.3.13",
  "description": "SystemD Wallet is for Android and iOS.",
  "main": "electron-start.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "https://github.com/VokezOfficial/systemd-mobile-wallet",
  "keywords": [
    "XRP",
    "Ripple",
    "SystemD",
    "Wallet"
  ],
  "author": "StarStone Limited",
  "license": "GPL 2.0",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "io.vokez.systemd.wallet.core",
    "compression": "maximum",
    "win": {
      "target": "appx",
      "icon": "www/res/electron/toastwallet.ico"
    },
    "appx": {
      "backgroundColor": "#1565b1"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "icon": "www/res/icon/icon.icns"
    }
  },
  "forceCodeSigning": "true",
  "publisherName": "StarStone Limited",
  "verifyUpdateCodeSignature": "true",
  "dependencies": {
    "cordova-android-support-gradle-release": "^1.4.7",
    "cordova-browser": "4.1.0",
    "electron-debug": "^2.0.0",
    "menu": "^0.2.5"
  },
  "cordova": {
    "platforms": [
      "browser"
    ]
  }
}
